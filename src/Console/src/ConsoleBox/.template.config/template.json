{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matt Janda",
  "classifications": ["JandaBox/Console"],
  "name": "JandaBox Console App Project",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "JandaBox Console provides project for console application with dependency injection, logging, and configuration.",
  "groupIdentity": "consoleprj",
  "precedence": "4000",
  "identity": "JandaBox.Console.Project",
  "shortName": "consoleprj",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "ConsoleBox",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/.vs/**",
            "**/bin/**",
            "**/obj/**"
          ]
        },
        {
          "condition": "(basic)",
          "exclude": [
            "appsettings.json",
            "Extensions.cs",
            "Options.cs",
            "Settings.cs",
            "Properties/*"
          ]
        },
        {
          "condition": "(!settings)",
          "exclude": [
            "Settings.cs"
          ]
        },
        {
          "condition": "(!vscode)",
          "exclude": [            
            ".vscode/**"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "sourceName": {
      "type": "parameter",
      "replaces": "ConsoleBox"
    },
    "vscode": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Create launch and tasks files for Visual Studio Code."
    },
    "basic": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Create basic console application."
    },
    "linux": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Set runtime identifier to linux-x64."
    },
    "projectOnly": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Create project only.",
      "isEnabled": false
    },
    "serilog": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Use Serilog logger."
    },
    "settings": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Use settings binders."
    },
    "async": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Run main with async await."
    },    
    "single": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Publish as single file, self contained, win-x64 console application."
    }    
  }
}