{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matt Janda",
  "classifications": ["JandaBox/Console"],
  "name": "JandaBox Console App",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "JandaBox Console provides solution template for console application with dependency injection, logging, and configuration.",
  "groupIdentity": "consolebox",
  "precedence": "4000",
  "identity": "JandaBox.Console",
  "shortName": "consolebox",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "ConsoleBox",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/.vs/**",
            "**/bin/**",
            "**/obj/**"
          ]
        },
        {
          "condition": "(basic)",
          "exclude": [
            "src/ConsoleBox/appsettings.json",
            "src/ConsoleBox/Extensions.cs",
            "src/ConsoleBox/Options.cs",
            "src/ConsoleBox/Settings.cs",
            "src/ConsoleBox/Properties/*"
          ]
        },
        {
          "condition": "(!vscode)",
          "exclude": [            
            ".vscode/**"
          ]
        },
        {
          "condition": "(!settings)",
          "exclude": [
            "src/ConsoleBox/Settings.cs"
          ]
        },
        {
          "condition": "(!gitVersion)",
          "exclude": [
            "GitVersion.yml"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "sourceName": {
      "type": "parameter",
      "replaces": "ConsoleBox"
    },
    "basic": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Create basic console application."
    },
    "linux": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Set runtime identifier to linux-x64."
    },
    "vscode": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Create launch and tasks files for Visual Studio Code."
    },
    "projectOnly": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Create project only."
    },
    "serilog": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Use Serilog logger."
    },
    "settings": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Use settings binders."
    },
    "gitVersion": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Provide semantic versioning with GitVesion."
    },
    "async": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Run main with async await."
    },    
    "single": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Publish as single file, self contained, win-x64 console application."
    },   
    "projectTypeId":{
      "type": "generated",
      "generator": "guid",
      "replaces": "PROJECT_INSTANCE_GUID",
      "parameters": {
        "defaultFormat":"D"
      }
    },
    "solutionId":{
      "type": "generated",
      "generator": "guid",
      "replaces": "SOLUTION_GUID",
      "parameters": {
        "defaultFormat":"D"
      }
    }
  }
}