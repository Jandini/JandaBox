{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matt Janda",
  "classifications": ["JandaBox/Basic"],
  "name": "JandaBox Basic Console Solution",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "JandaBox Basic template provides basic console application with dependency injection, logging, and configuration.",
  "groupIdentity": "basicbox",
  "precedence": "4000",
  "identity": "JandaBox.Basic",
  "shortName": "basicbox",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "BasicBox",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/.vs/**",
            "**/bin/**",
            "**/obj/**",
            "src/BasicBox/.vscode/**"
          ]
        },       
        {
          "condition": "(!vscode)",
          "exclude": [            
            ".vscode/**"
          ]
        },       
        {
          "condition": "(!git-version)",
          "exclude": [
            "GitVersion.yml"
          ]
        }       
      ]
    }
  ],
  "symbols": {
    "sourceName": {
      "type": "parameter",
      "replaces": "BasicBox",
      "isEnabled": false
    },
    "vscode": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Create launch.json and tasks.json files for Visual Studio Code."
    },  
    "serilog": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Use Serilog logger."
    },   
    "git-version": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Provide semantic versioning with GitVesion."
    },
    "async": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Run main with async await."
    },    
    "projectTypeId":{
      "type": "generated",
      "generator": "guid",
      "replaces": "PROJECT_INSTANCE_GUID",
      "parameters": {
        "defaultFormat":"D"
      }
    },
    "solutionId":{
      "type": "generated",
      "generator": "guid",
      "replaces": "SOLUTION_GUID",
      "parameters": {
        "defaultFormat":"D"
      }
    }
  }
}