{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matt Janda",
  "classifications": ["JandaBox/WebApi"],
  "name": "JandaBox ASP.NET Core Web API",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "JandaBox WebApi provides solution template for web api with AutoMapper, Serilog and Health endpoint.",
  "groupIdentity": "webapibox",
  "precedence": "4000",
  "identity": "JandaBox.WebApi",
  "shortName": "webapibox",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "WebApiBox",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/logs/**"
          ]
        },
        {
          "condition": "(!exceptionMiddleware)",
          "exclude": [
            "src/WebApiBox/ExceptionMiddleware.cs"
          ]
        },
        {
          "condition": "(!appSettings)",
          "exclude": [
            "src/WebApiBox/AppSettings.cs"
          ]
        }
         
      ]
    }
  ],
  "symbols": {
    "sourceName": {
      "type": "parameter",
      "replaces": "WebApiBox"
    },
    "openApi": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add NuGet packages for OpenApi code generator."
    },
    "windowsService": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add run as windows service."
    },
    "exceptionMiddleware": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Add global exception handler middleware."
    },
    "appSettings": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Add appsetting singleton with option to override application name and version through environment variables."
    }
  } 
}