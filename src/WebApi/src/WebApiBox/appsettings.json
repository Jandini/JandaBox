{
  "AllowedHosts": "*",
  //#if (elasticLog)
  "ELASTICSEARCH_URI": "http://localhost:9200",
  //#endif
  "Serilog": {
    //#if (elasticLog)
    "Using": [ "Serilog.Sinks.Elasticsearch", "Serilog.Sinks.Console", "Serilog.Enrichers.ClassName" ],
    ////#else
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console", "Serilog.Enrichers.ClassName" ],
    //#endif
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithClassName" ],
    "WriteTo": [
      //#if (!elasticLog)
      {
        "Name": "File",
        "Args": {
          "path": "logs/WebApiBox.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u4}] [{MachineName}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 8388608,
          "retainedFileCountLimit": 8,
          "rollingInterval": "Minute"
        }
      },
      //#endif
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u4}] [{MachineName}] [{ClassName}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}
