{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matt Janda",
  "classifications": [
    "JandaBox/WebApi"
  ],
  "name": "JandaBox ASP.NET Core Web API Project",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "JandaBox WebApi provides project template for web api with AutoMapper, Serilog and Health endpoint.",
  "groupIdentity": "webapiprj",
  "precedence": "4000",
  "identity": "JandaBox.WebApi.Project",
  "shortName": "webapiprj",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "WebApiBox",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/logs/**"
          ]
        },
        {
          "condition": "(!exceptionMiddleware)",
          "exclude": [
            "ExceptionMiddleware.cs"
          ]
        },
        {
          "condition": "(!appSettings)",
          "exclude": [
            "AppSettings.cs"
          ]
        },
        {
          "condition": "(!vscode)",
          "exclude": [
            ".vscode/**"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "sourceName": {
      "type": "parameter",
      "replaces": "WebApiBox",
      "isEnabled": false
    },
    "vscode": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Create launch.json and tasks.json files for Visual Studio Code."
    },
    "path": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "",
      "replaces": "VS_PATH",
      "description": "Add relative path to tasks.json and launch.json files. e.g. 'src'"
    },
    "open-api": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add NuGet packages for OpenApi code generator."
    },
    "windows-service": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add run as windows service."
    },
    "windowsService": {
      "type": "computed",
      "datatype": "bool",
      "value": "windows-service"
    },
    "exception-middleware": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add global exception handler middleware."
    },
    "exceptionMiddleware": {
      "type": "computed",
      "datatype": "bool",      
      "value": "exception-middleware"
    },
    "name-override": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add application name and version override option through appsettings or environment variables."
    },
    "nameOverride": {
      "type": "computed",
      "datatype": "bool",
      "value": "name-override"
    },
    "elasticLog": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add Elasticsearch Serilog sink and configuration."
    }
  }
}