{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WebApiBox (Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_WebApiBox",
            "program": "${workspaceFolder}/bin/Debug/net8.0/WebApiBox.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+\"(https?://\\S+)\"",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}