{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matt Janda",
  "classifications": ["JandaBox/Library"],
  "name": "JandaBox Class Library",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "JandaBox Library provides NuGet ready class library template with github actions and semantic versioning.",
  "groupIdentity": "classlibbox",
  "precedence": "4000",
  "identity": "JandaBox.Library",
  "shortName": "classlibbox",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "LibraryBox",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/.vs/**",
            "**/bin/**",
            "**/obj/**"
          ]
        },
        {
          "condition": "(!actions)",
          "exclude": [
            ".github/workflows/build.yml",
            ".github/workflows/nuget.yml"
          ]
        },
        {
          "condition": "(!gitVersion)",
          "exclude": [
            "GitVersion.yml"
          ]
        },
        {
          "condition": "(!nuget)",
          "exclude": [
            "icon.png"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "sourceName": {
      "type": "parameter",
      "replaces": "LibraryBox"
    },
    "nuget": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Configure project for ready to push NugGet package."
    },   
    "user": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "GITHUB_USER",
      "defaultValue": "GITHUB_USER",
      "description": "GitHub user name for GitHub links in README.md and project file."
    },
    "actions": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add GitHub actions to create nuget package and push it to GitHub and NuGet.org."
    },   
    "gitVersion": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Provide semantic versioning with GitVesion."
    }
  }
}