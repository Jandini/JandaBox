{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matt Janda",
  "classifications": [
    "JandaBox/WebApi"
  ],
  "name": "JandaBox ASP.NET Core Web API Solution",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "JandaBox WebApi provides solution template for web api with AutoMapper, Serilog and Health endpoint.",
  "groupIdentity": "webapibox",
  "precedence": "4000",
  "identity": "JandaBox.WebApi",
  "shortName": "webapibox",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "WebApiBox",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/logs/**",
            "src/WebApiBox/.vscode/**"
          ]
        },
        {
          "condition": "(!exceptionMiddleware)",
          "exclude": [
            "src/WebApiBox/ExceptionMiddleware.cs"
          ]
        },
        {
          "condition": "(!appSettings)",
          "exclude": [
            "src/WebApiBox/AppSettings.cs"
          ]
        },
        {
          "condition": "(!git-version)",
          "exclude": [
            "GitVersion.yml"
          ]
        },
        {
          "condition": "(!vscode)",
          "exclude": [
            ".vscode/**"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "sourceName": {
      "type": "parameter",
      "replaces": "WebApiBox",
      "isEnabled": false
    },
    "vscode": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Create launch.json and tasks.json files for Visual Studio Code."
    },
    "git-version": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Provide semantic versioning with GitVesion."
    },
    "open-api": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add NuGet packages for OpenApi code generator."
    },
    "windows-service": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add run as windows service."
    },
    "windowsService": {
      "type": "computed",
      "datatype": "bool",
      "value": "windows-service"
    },
    "exception-middleware": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add global exception handler middleware."
    },
    "exceptionMiddleware": {
      "type": "computed",
      "datatype": "bool",      
      "value": "exception-middleware"
    },
    "name-override": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add application name and version override option through appsettings or environment variables."
    },
    "nameOverride": {
      "type": "computed",
      "datatype": "bool",
      "value": "name-override"
    },
    "elastic-logging": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add Elasticsearch Serilog sink and configuration."
    },
    "elasticLog": {
      "type": "computed",
      "datatype": "bool",
      "value": "elastic-logging"
    },
    "projectTypeId": {
      "type": "generated",
      "generator": "guid",
      "replaces": "PROJECT_INSTANCE_GUID",
      "parameters": {
        "defaultFormat": "D"
      }
    },
    "solutionId": {
      "type": "generated",
      "generator": "guid",
      "replaces": "SOLUTION_GUID",
      "parameters": {
        "defaultFormat": "D"
      }
    }
  }
}