{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matt Janda",
  "classifications": ["JandaBox/NuGet"],
  "name": "JandaBox NuGet Class Library",
  "generatorVersions": "[1.0.0.0-*)",
  "description": "JandaBox nugetbox provides NuGet ready class library template with github actions and semantic versioning.",
  "groupIdentity": "nugetbox",
  "precedence": "4000",
  "identity": "JandaBox.NuGet",
  "shortName": "nugetbox",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "LibraryBox",
  "preferNameDirectory": true,
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/.vs/**",
            "**/bin/**",
            "**/obj/**"
          ]
        },
        {
          "condition": "(!actions)",
          "exclude": [
            ".github/workflows/build.yml",
            ".github/workflows/nuget.yml"
          ]
        },
        {
          "condition": "(!git-version)",
          "exclude": [
            "GitVersion.yml"
          ]
        },
        {
          "condition": "(!license)",
          "exclude": [
            "LICENSE"
          ]
        }
      ]
    }
  ],
  "symbols": {
    "sourceName": {
      "type": "parameter",
      "replaces": "LibraryBox",
      "isEnabled": false
    }, 
    "tagNugetOrg": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add GitHub action for pushing tagged package to NuGet.org registry."
    },   
    "license": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Add MIT LICENSE file to the repository and nuget package."
    },   
    "authors": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "PACKAGE_AUTHORS",
      "defaultValue": "PACKAGE_AUTHORS",
      "description": "Package authors."
    },
    "user": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "GITHUB_USER",
      "defaultValue": "GITHUB_USER",
      "description": "GitHub user name."
    },
    "actions": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add GitHub actions for building and pushing package to the registry."
    },   
    "git-version": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Add semantic versioning with GitVesion."
    },    
    "projectTypeId":{
      "type": "generated",
      "generator": "guid",
      "replaces": "PROJECT_INSTANCE_GUID",
      "parameters": {
        "defaultFormat":"D"
      }
    },
    "solutionId":{
      "type": "generated",
      "generator": "guid",
      "replaces": "SOLUTION_GUID",
      "parameters": {
        "defaultFormat":"D"
      }
    },
    "copyrightYear": {
      "type": "generated",
      "generator": "now",
      "replaces": "1980",
      "parameters": {
        "format": "yyyy"
      }
    }    
  }
}